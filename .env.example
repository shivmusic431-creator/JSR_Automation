# ============================================
# JSR_Automation - GitHub Actions Environment
# ============================================

# Google Gemini API (Required)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Pexels API (Required for stock footage)
# Get from: https://www.pexels.com/api/
PEXELS_API_KEY=your_pexels_api_key_here

# Stability AI API (Required for thumbnails)
# Get from: https://platform.stability.ai/
STABILITY_API_KEY=your_stability_api_key_here

# Cloudinary (Required for cloud storage)
# Get from: https://cloudinary.com/
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Firebase (Required for database access)
# Download service account JSON from Firebase Console
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project"...}

# Tier 1 Server Communication (Required)
# Your Render server URL
TIER1_WEBHOOK_URL=https://jsr-auto.onrender.com/webhooks/github-actions
TIER1_HEALTH_URL=https://jsr-auto.onrender.com/health

# GitHub Token (Auto-provided by GitHub Actions)
GITHUB_TOKEN=${{ secrets.GITHUB_TOKEN }}

# ============================================
# Optional: Development Settings
# ============================================

# Debug mode (set to 'true' for verbose logging)
DEBUG=false

# Skip video generation for testing (set to 'true')
SKIP_VIDEO_GENERATION=false

# Test mode - generates shorter content
TEST_MODE=false
